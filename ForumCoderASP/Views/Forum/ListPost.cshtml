
@{
    ViewBag.Title = "ListPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    @{ var userInfomatiom = (ForumCoderASP.Models.User)Session["User"]; }
    <!--archive header-->
    <div class="archive-header pt-50">
        <div class="container">
            <h2 class="font-weight-900">Danh sách bài viết</h2>

            <div class="bt-1 border-color-1 mt-30 mb-50"></div>
        </div>
    </div>
    <div class="pb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="post-module-3">
                        <div class="loop-list loop-list-style-1">
                            @foreach (var item in ViewBag.List)
                            {
                                <article class="hover-up-2 transition-normal wow fadeInUp animated">
                                    <div class="row mb-40 list-style-2">

                                        <div class="col-md-12 align-self-center">
                                            <div class="post-content">
                                                <h5 class="post-title font-weight-900 mb-20">
                                                    <a href="/post/detail/@item.id_post">@item.title</a>
                                                    <span class="post-format-icon"><i class="elegant-icon icon_star_alt"></i></span>
                                                </h5>
                                                <div class="post-excerpt mb-25 font-small text-muted">
                                                    <p style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; width: 100%;">@Html.Raw(item.description)</p>
                                                </div>
                                                <div class="entry-meta meta-1 float-left font-x-small text-uppercase">
                                                    <span class="post-on">@item.createdAt</span>
                                                    @if (userInfomatiom != null)
                                                    {
                                                        if (item.User.id_user == userInfomatiom.id_user)
                                                        {
                                                            <a href="/update/post/@item.id_post"><button type="button" class="btn btn-primary btn-sm " style="margin-left: 380px;">Sửa</button></a>
                                                            if (item.status == 0)
                                                            {
                                                                <button type="button" class="btn btn-danger btn-sm ">Đang chờ duyệt</button>
                                                            }
                                                            else if (item.status == 1)
                                                            {
                                                                <button type="button" class="btn btn-success btn-sm ">Đã duyệt</button>
                                                            }
                                                            else
                                                            {
                                                                <button type="button" class="btn btn-warning btn-sm ">Bị chặn</button>
                                                            }

                                                        }
                                                        else
                                                        {
                                                            <span></span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span></span>
                                                    }
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </article>
                            }

                        </div>
                    </div>

                </div>
                @{ var user = ViewBag.User;}
                <div class="col-lg-4">
                    <div class="widget-area">
                        <div class="sidebar-widget widget-about mb-50 pt-30 pr-30 pb-30 pl-30 bg-white border-radius-5 has-border  wow fadeInUp animated">
                            <img class="about-author-img mb-25" src="/Content/assets/imgs/authors/author.jpg" alt="">
                            <h5 class="mb-20">Xin chào, Tôi là @user.fullname</h5>

                            <strong>Theo dõi tôi: </strong>
                            <ul class="header-social-network d-inline-block list-inline color-white mb-20">
                                <li class="list-inline-item"><a class="fb" href="#" target="_blank" title="Facebook"><i class="elegant-icon social_facebook"></i></a></li>
                                <li class="list-inline-item"><a class="tw" href="#" target="_blank" title="Tweet now"><i class="elegant-icon social_twitter"></i></a></li>
                                <li class="list-inline-item"><a class="pt" href="#" target="_blank" title="Pin it"><i class="elegant-icon social_pinterest"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

